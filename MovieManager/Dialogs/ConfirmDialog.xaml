<Window x:Class="MovieManager.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfirmDialog" Name="window" ShowInTaskbar="False" Height="204" Width="386" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize" Background="{StaticResource PageBackgroundBrush}">
    <Window.Effect>
        <DropShadowEffect Color="Black" Opacity="1" />
    </Window.Effect>
    <Grid>
        <Button Content="Ja" Height="30" HorizontalAlignment="Left" Margin="180,123,0,0" Name="yes" VerticalAlignment="Top" Width="75" Click="yes_Click" />
        <Button Content="Nein" Height="30" HorizontalAlignment="Left" Margin="277,123,0,0" Name="no" VerticalAlignment="Top" Width="75" Click="no_Click" />
        <TextBlock Height="42" Margin="12,12,12,0" Name="title" Text="TextBlock" VerticalAlignment="Top" Style="{StaticResource LargeContentFontStyle}" />
        <TextBlock Height="57" HorizontalAlignment="Left" Margin="12,60,0,0" Name="content" VerticalAlignment="Top" Width="340" Style="{StaticResource ReadingFontStyle}" Text="TextBlock" />
    </Grid>
</Window>
